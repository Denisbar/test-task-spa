{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended"
    ],
    "plugins": [
        "import",
        "vitest"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-console": "off",
        "import/no-unresolved": "off"
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/",
        "mock/"
    ]
}
